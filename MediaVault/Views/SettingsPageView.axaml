<UserControl
    x:Class="MediaVault.Views.SettingsPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MediaVault.ViewModels"
    x:DataType="vm:SettingsPageViewModel">
    <Border
        Margin="20"
        Padding="20"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource ThemeBackgroundBrush}"
        BorderBrush="{DynamicResource ThemeBorderBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <StackPanel Spacing="16">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button
                    Width="110"
                    Classes="accent"
                    Command="{Binding BackCommand}"
                    Content="⬅ Назад" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Налаштування" />
            </StackPanel>
            <!--  Поля налаштувань  -->
            <StackPanel Orientation="Vertical" Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Тема:" />
                    <ComboBox
                        Width="200"
                        ItemsSource="{Binding Themes}"
                        SelectedItem="{Binding Theme}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Мова:" />
                    <ComboBox
                        Width="200"
                        ItemsSource="{Binding Languages}"
                        SelectedItem="{Binding Language}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Папка медіа:" />
                    <TextBox
                        Width="300"
                        Text="{Binding MediaFolderPath, UpdateSourceTrigger=PropertyChanged}"
                        Watermark="Шлях до папки" />
                    <Button
                        Width="36"
                        Height="36"
                        Margin="8,0,0,0"
                        Content="📂"
                        ToolTip.Tip="Обрати директорію"
                        Command="{Binding SelectMediaFolderCommand}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
