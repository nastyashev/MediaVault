<UserControl
    x:Class="MediaVault.Views.ViewingHistoryView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="clr-namespace:MediaVault.Models"
    xmlns:vm="clr-namespace:MediaVault.ViewModels"
    x:DataType="vm:ViewingHistoryViewModel">
    <Border
        Margin="20"
        Padding="20"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource ThemeBackgroundBrush}"
        BorderBrush="{DynamicResource ThemeBorderBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <Grid RowDefinitions="Auto,Auto,*,Auto">
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    Width="110"
                    Classes="accent"
                    Command="{Binding HideHistoryCommand}"
                    Content="⬅ Назад" />
                <Button
                    Width="140"
                    Command="{Binding ExportCommand}"
                    Content="Експортувати" />
            </StackPanel>
            <Grid
                Grid.Row="1"
                Margin="0,0,0,6"
                ColumnDefinitions="*,200">
                <TextBlock
                    Grid.Column="0"
                    Padding="4,2"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Назва" />
                <TextBlock
                    Grid.Column="1"
                    Padding="4,2"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Дата та час" />
            </Grid>
            <ScrollViewer Grid.Row="2" VerticalAlignment="Stretch">
                <ListBox
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding SortedHistory}">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Margin" Value="0,2" />
                            <Setter Property="Padding" Value="4,2" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="CornerRadius" Value="6" />
                        </Style>
                        <Style Selector="ListBoxItem:pointerover">
                            <Setter Property="Background" Value="{DynamicResource ThemeControlLowBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="Background" Value="{DynamicResource ThemeControlMidBrush}" />
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="model:ViewingHistoryRecord">
                            <Grid ColumnDefinitions="*,200">
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="{Binding FileName}" />
                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="{Binding ViewDate, StringFormat='g'}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
